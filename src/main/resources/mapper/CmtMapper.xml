<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.smarthospital_back.mapper.CmtMapper">

    <!-- 插入评论 -->
    <insert id="insertComment" parameterType="org.example.smarthospital_back.entity.CmtEntity">
        insert into Comment (d_id, u_id, cmt_rank, cmt_content) values
            (#{d_id}, #{u_id}, #{cmt_rank}, #{cmt_content});
    </insert>

    <!-- 根据用户ID检查评论 -->
    <select id="checkCmtByUid" resultType="org.example.smarthospital_back.entity.CmtEntity">
        select * from Comment where u_id = #{u_id};
    </select>

    <!-- 根据医生ID检查评论 -->
    <select id="checkCmtByDid" resultType="org.example.smarthospital_back.entity.CmtEntity">
        select * from Comment where d_id = #{d_id};
    </select>

</mapper>
